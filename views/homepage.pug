doctype html
html
    head 
        title= pageTitle
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        h1 Homepage
        table 
            thead 
                tr
                    th Name
                    th Breed
                    th Weight
            tbody
                each pet in pets
                    tr
                        td #{pet.name}
                        td #{pet.breed}
                        td #{pet.weight}
        a(href="/updates") View Updates